<%- include('../partials/head') %>

<div class="container mt-4" style="max-width: 600px;">
  <h1 class="text-center mb-4">Edit <%= foundList.title %></h1>

  <form action="/listings/<%= foundList._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" id="title" value="<%= foundList.title %>" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="description" id="description" class="form-control" rows="3" required><%= foundList.description %></textarea>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price (BHD)</label>
      <input type="number" name="price" id="price" value="<%= foundList.price %>" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input type="text" name="image" id="image" value="<%= foundList.image %>" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning w-100">Update Listing</button>
  </form>
</div>

</body>
</html>